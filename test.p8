-- main

function _init()
	x=64
	y=64
	flip_x=false
	flip_y=false
end


function _update()
	if btn(⬆️) then
		y-=1
	end
	if btn(⬇️) then
		y+=1
	end
	if btn(⬅️) then
		x-=1
		flip_x=true
	end
	if btn(➡️) then
		x+=1
		flip_x=false
	end
end


function _draw()
	cls()
	spr(1,x,y,1,1,flip_x,flip_y)
end
